<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>Divisions</title>
		<link rel="stylesheet" href="/styles/styles.css" />
		<link rel="stylesheet" href="/styles/home.css" />
	</head>
	<body>
		<header>
			<nav class="navigation-bar">
				<h1>Divisions</h1>
			</nav>
		</header>

		<main>
			<section class="section">
				<h2 class="section-title">Departments</h2>
				<div id="division-list">
					<% if (departments && departments.length) { %> <%
					departments.forEach(function (d) { %>
					<article class="division-card">
						<h3><%= d.divisionName %></h3>
						<p><strong>Dean:</strong> <%= d.deanName %></p>
						<p><strong>Chair:</strong> <%= d.chairName %></p>
						<p><strong>PEN Contact:</strong> <%= d.penContact %></p>
						<p><strong>LOC Rep:</strong> <%= d.locRep %></p>

						<% if (d.programList && d.programList.length) { %>
						<ul>
							<% d.programList.forEach(function (p) { %>
							<li>
								<strong><%= p.programName %></strong>
								<% if (p.payees) { %>
								<ul>
									<% Object.keys(p.payees).forEach(function (payee) { %>
									<li><%= payee %>: $<%= p.payees[payee] %></li>
									<% }); %>
								</ul>
								<% } %>
							</li>
							<% }); %>
						</ul>
						<% } %>
					</article>
					<% }); %> <% } else { %>
					<p>No departments found.</p>
					<% } %>
				</div>
			</section>
		</main>
	</body>
</html>
